<% layout("/layout/boilerplate.ejs") %>
<%= success %>
<style>
    #filters  {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        margin: 0.67rem;
        text-align: center;
        opacity: 0.7;
    }
    .filter:hover{
        opacity : 1;
        cursor: pointer;
    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        padding: 1rem;
        height: 3.5rem;
        margin-left: 5rem;
        margin-bottom: 2rem;
    }
    .filter p {
        text-size-adjust: 0.5rem;
    }
    .filter a{
        text-decoration: none;
        color: black;
        opacity: 0.7;
    }
</style>
<body>
    <div id="filters">
        <div class="filter">
            <a href="/listings/filters/trending">
                <div><i class="fa-solid fa-fire"></i><br></div>
                <p>trending</p>
            </a>
            
        </div>
        <div class="filter">
            <a href="/listings/filters/rooms">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>rooms</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/filters/mountaincities">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>mountain cities</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/filters/OMG">
                <div><i class="fa-solid fa-volcano"></i></div>
                <p>OMG!</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/filters/castles">
                <div><i class="fa-regular fa-font-awesome"></i></div>
                <p>castles</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/filters/swimmingpools">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>swimming pools</p>
            </a>            
        </div>
        <div class="filter">
            <a href="/listings/filters/camping">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>camping</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/filters/farms">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>farms</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/filters/arctic">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>arctic</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/filters/domes">
                <div><i class="fa-solid fa-igloo"></i></div>
                <p>Domes</p>
            </a>
        </div>
        <div class="filter">
            <a href="/listings/filters/boats">
                <div><i class="fa-solid fa-sailboat"></i></div>
                <p>Boats</p>
            </a>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-med-2 row-col-small-1">
        <% for(let listingData of listingDatas) { %>
            <a href="/listings/<%= listingData._id %>" class="card-dec">
            <div class="card col">
                <img src="<%= listingData.image.url %>" class="card-img-top" alt="some image" style="height: 20rem;">
                <div class="card-body">
                  <p class="card-text"><b><%= listingData.title %></b> <br>
                    &#8377; <%= listingData.price.toLocaleString("en-IN") %> / night
                    <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
                  </p>
                  
                </div>
            </div>
            </a>
        <% } %>   
    </div>
</body>
<script>
    let taxswitch = document.getElementById("switchCheckDefault");
    // taxswitch.addEventListener("click",()=>{
    //     console.log('clicked');
    // });
    let taxInfos = document.getElementsByClassName("tax-info");
    let clickNumber = 0;
    taxswitch.addEventListener("click",()=>{
        if(!(clickNumber % 2)){
            for(taxInfo of taxInfos){
            taxInfo.style.display = "inline";
            }
        }
        if(clickNumber % 2){
            for(taxInfo of taxInfos){
            taxInfo.style.display = "none";
            }
        }
        clickNumber++;
    });
</script>
